@using PCSHOP.Utilities;
@model PCSHOP.Models.Slide;
@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
	<div class="pagetile">
		<h2>Sửa bài viết</h2>
	</div>
	<form asp-action="Edit" method="post">
		<div class="form-row">
			<input type="text" class="form-control mb-3" asp-for="ID" type="hidden" />
			<div class="form-group col-md-12">
				<label asp-for="Title">Title</label>
				<input type="text" class="form-control mb-3" asp-for="Title" />
			</div>
			<div class="form-group col-md-12">
				<label asp-for="Images">Images</label>
				<textarea asp-for="Images" class="form-control"></textarea>
			</div>
			<div class="form-group col-md-6 mt-3 mb-3">
				<label>
					@Html.CheckBox("IsActive",false)
					Hiển thị
				</label>
			</div>
			<div class="form-group d-none">
				<input asp-for="CreatedDate" class="form-control" value="@Functions.getCurrentDate()" />
			</div>
			<div class="form-group d-none">
				<input asp-for="SlideOrder" class="form-control" value="1" />
			</div>
			<div class="form-group d-none">
				<input asp-for="Category" class="form-control" value="1" />
			</div>
			<div class="form-group d-none">
				<input asp-for="Status" class="form-control" value="1" />
			</div>
			<div class="form-group d-none">
				<input asp-for="Link" class="form-control" value="NULL" />
			</div>
		</div>
		<a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
			<i class="bi bi-arrow-left-circle"></i> Quay lại
		</a>
		<button type="submit" class="btn btn-lg btn-danger p-2">
			<i class="bi bi-trash-fill"></i> Lưu lại
		</button>
	</form>
</main>
@{
	var summerNote = new PCSHOP.Areas.Admin.Models.SummerNote("#Images");
	<partial name="_SummerNote" model="summerNote" />
}

